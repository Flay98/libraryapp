<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбранная книга: Тихий Дэн"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/bookCover"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/den"
                android:contentDescription="Обложка книги" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bookAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Автор: Таренков Андрей"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/bookDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Описание книги..."
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Кнопки -->
        <Button
            android:id="@+id/btnNowReading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B9D08F"
            android:text="Сейчас читаю"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnWishlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B9D08F"
            android:text="Хочу прочитать"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B9D08F"
            android:text="Прочитано"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnBackToCatalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#B9D08F"
            android:text="Назад"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>